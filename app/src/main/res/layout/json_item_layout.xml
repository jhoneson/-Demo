<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/json_icon"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@id/json_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/json_title"
        android:text="1111111"
        android:layout_toRightOf="@id/json_icon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/json_upon"
        android:layout_marginTop="10dp"
        android:text="2222222"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:layout_toRightOf="@id/json_icon"
        android:layout_below="@id/json_title"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/json_distance"
        android:text="4444444444"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/json_icon"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/info_map"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/json_distance"
        android:layout_alignBottom="@id/json_distance"
        android:id="@+id/json_info"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/json_adress"
        android:text="2222222"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="bottom"
        android:layout_alignBottom="@id/json_icon"
        android:layout_toLeftOf="@id/json_info"
        android:layout_toRightOf="@id/json_icon"
        android:layout_below="@id/json_upon"/>
</RelativeLayout>
